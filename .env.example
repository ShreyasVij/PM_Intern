# Environment Configuration
# For MongoDB Atlas (recommended):
# MONGO_URI=mongodb+srv://<username>:<password>@<cluster>/pm_intern?retryWrites=true&w=majority
# For local MongoDB:
# MONGO_URI=mongodb://localhost:27017/
MONGO_URI=
DB_NAME=pm_intern

# Environments: development | production | testing
FLASK_ENV=development
FLASK_DEBUG=True
API_PORT=3000
CORS_ORIGINS=http://127.0.0.1:3000,http://localhost:3000,http://127.0.0.1:5500,http://localhost:5500

#################################
# Security Settings
#################################
# IMPORTANT: Set real secrets in production
SECRET_KEY=dev-secret-key-change-in-production
JWT_SECRET_KEY=jwt-secret-key-change-in-production
PASSWORD_SALT_ROUNDS=12
SESSION_TIMEOUT=3600
MAX_LOGIN_ATTEMPTS=5

#################################
# Performance & Data Settings
#################################
MONGODB_POOL_SIZE=10

# Set to True to force Atlas-only mode (no JSON fallback)
# Recommended True for production, optional in dev
DISABLE_JSON_FALLBACK=False

CACHE_TIMEOUT=300
API_RATE_LIMIT=100

#################################
# Logging
#################################
LOG_LEVEL=INFO
LOG_FILE=logs/app.log